<Window x:Class="WindowsActivatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Activation App" Height="350" Width="500">
    <Grid>
        <TextBlock Text="Select an action:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <ComboBox x:Name="actionComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,40,0,0">
            <ComboBoxItem Content="Activate Windows" />
            <ComboBoxItem Content="Check Windows Activation Expiry" />
        </ComboBox>

        <TextBlock Text="Select Windows version:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,90,0,0"/>
        <ComboBox x:Name="windowsVersionComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,120,0,0">
            <ComboBoxItem Content="Windows 11 Home" />
            <ComboBoxItem Content="Windows 11 Pro" />
            <!-- Add more options here -->
        </ComboBox>

        <Button Content="Execute" HorizontalAlignment="Left" VerticalAlignment="Top" Width="168" Margin="10,180,0,0" Click="ExecuteButton_Click"/>
        <TextBlock x:Name="resultTextBlock" Text="Result" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,220,0,0" Width="480"/>
    </Grid>
</Window>
